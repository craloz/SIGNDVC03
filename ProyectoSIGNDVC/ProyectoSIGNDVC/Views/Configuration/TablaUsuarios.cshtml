@model ProyectoSIGNDVC.Models.ViewModel
@{
    ViewBag.Title = "TablaUsuarios";
    Layout = "~/Views/Templates/_TemplateIndex.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Usuarios</h1>   
       
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <a  href="/Configuration/RegistroUsuario" class="btn btn-success boton-tabla pull-right">Agregar</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Usuarios Registrados
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Código de empleado</th>
                            <th>Nombre</th>
                            <th>FechaNac</th>
                            <th>Usuario</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model.usuarios)
                        {

                       
                        <tr class="odd gradeX">
                            <td>@usuario.Empleado.Codigo</td>
                            <td>@(usuario.Empleado.Persona.nombre +" "+usuario.Empleado.Persona.apellido)</td>
                            <td>@usuario.Empleado.Persona.fecha_nacimiento</td>
                            <td>@usuario.usuario</td>
                            <td>
                                <center>
                                    <a href="/Configuration/EditarUsuario?usuario=@usuario.usuario" title="Editar"><span class="fa fa-pencil fa-fw" aria-hidden="true"></span></a>
                                    <a href="" title="Eliminar"><span style="color: red;" class="fa fa-close fa-fw" aria-hidden="true" ></span></a>
                                </center>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive
                <div class="well">
                    <h4>DataTables Usage Information</h4>
