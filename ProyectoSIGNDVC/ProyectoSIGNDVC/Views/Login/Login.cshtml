@model Usuario
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/templates/_TemplateLogin.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 back" style="">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <center><img style="width: 80%;" src="..\Content\images\dvclogo.png"></center>
                </div>
                <div class="panel-body">


                        @using (Html.BeginForm())
                        {    
                            @Html.AntiForgeryToken()
                        <fieldset>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <input class="form-control" name="usuario" id="usuario" placeholder="Usuario" type="text" required/>
                            </div>
                            <div class="form-group">
                                <input class="form-control"  name="clave" id="clave"   placeholder="Contraseña" type="password" required/>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <h3 style="text-align:center;color:red;">@ViewBag.Message</h3>
                            <input type="submit" class="btn btn-lg btn-success btn-block" value="Iniciar Sesion">
                        </fieldset>
                        }       
                </div>
            </div>
        </div>
    </div>
</div>