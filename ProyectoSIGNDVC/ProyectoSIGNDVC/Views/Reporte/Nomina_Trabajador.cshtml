@model ProyectoSIGNDVC.Models.ViewModel
@{
    ViewBag.Title = "Nomina_Trabajador";
    Layout = "~/Views/Templates/_TemplateIndex.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Pagos</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h5> Nomina del Empleado: @(Model.usuario.Empleado.Persona.nombre + " " + Model.usuario.Empleado.Persona.apellido)</h5>
                
                <h6>Desde: @Model.desde Hasta:@Model.hasta</h6>
                
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Numero Ref</th>
                            <th>Fecha</th>
                            <th>Monto</th>
                            <th>Ver</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pago in Model.pagos)
                        {
                            <tr class="odd gradeX">
                                <td>@pago.numero_ref</td>
                                <td>@pago.f_pago</td>
                                <td>@pago.monto</td>
                                <td>
                                    <center>
                                        <a href="/Pago/VerPago?pago=@pago.PagoID" class="fa fa-search"></a>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
