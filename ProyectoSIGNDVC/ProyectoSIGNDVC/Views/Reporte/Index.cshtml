@model ProyectoSIGNDVC.Models.ViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Templates/_TemplateIndex.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Reportes</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-4 col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-bar-chart fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div>Comprobante de abono y detalle de retenciones de nómina quincenal por trabajador.</div>
                        
                    </div>
                </div>
            </div>
            <a href="/Reporte/Detalle_Abono">
                <div class="panel-footer">
                    <span class="pull-left">Ver Detalles</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>

    <div class="col-lg-4 col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-bar-chart fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div>Aprobación de Nómina quincenal</div>

                    </div>
                </div>
            </div>
            <a href="/Reporte/Aprobacion_Quincenal">
                <div class="panel-footer">
                    <span class="pull-left">Ver Detalles</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>


    <div class="col-lg-4 col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-bar-chart fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div>Nómina mensual y anual por trabajador</div>

                    </div>
                </div>
            </div>
            <div class="panel-footer">
                    <div class="dropdown">
                        <a href="" data-toggle="dropdown">
                             Ver Detalles
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <form style="margin: 4px 4px;" role="form" action="/Reporte/Nomina_Trabajador" method="post">
                                    <label for="usuario">Usuario</label>
                                    <select name="usuario" class="form-control">
                                        @foreach (var usuario in Model.usuarios)
                                        {
                                            <option>@usuario.usuario</option>
                                        }
                                    </select>
                                    <label for="desde">Desde</label>
                                    <input id="desde" name="desde" class="form-control" type="date" required/>
                                    <label for="hasta">Hasta</label>
                                    <input id="hasta" name="hasta" class="form-control" type="date" required/>
                                    <br/>
                                    <button type="submit" class="btn btn-default btn-success pull-right">Ir</button>
                                </form>
                            </li>
                        </ul>
                    </div>

                    <!--<span class="pull-left">Ver Detalles</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>-->
            </div>
        </div>
    </div>

  


    </div>
