@model ProyectoSIGNDVC.Models.ViewModel
@{
    ViewBag.Title = "VerPago";
    Layout = "~/Views/Templates/_TemplateIndex.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <h4>Monto: </h4>
            @if (Model.pago != null) { 
            <h5>@Model.pago.monto</h5>
            }
            else{
                <h5>Este Pago No Existe</h5>
            }
        </div>
    </div>
</div>
