@model ProyectoSIGNDVC.Models.ViewModel
@{
    ViewBag.Title = "EditarPago";
    Layout = "~/Views/Templates/_TemplateIndex.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Detalle de pago</h1>
        </div>

        <div class="col-lg-12">
            <form role="form" action="/Pago/EditarPagoByEmp" method="post">
                <div>
                    <input required id="id" class="form-control" name="id" type="hidden" autofocus value="@Model.empleado.EmpleadoID">
                    <fieldset>
                        <div class="row">
                            <div class="col-xs-5">
                                <h4 class="page-header">@String.Concat(Model.empleado.Persona.nombre, " " + Model.empleado.Persona.apellido)</h4>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-xs-3">
                                <label for="Salario">Salario</label>
                                <input id="sueldo" class="form-control" name="sueldo" type="text" autofocus value="@Model.empleado.sueldo">
                            </div>                            
                        </div>
                        <div class="form-group row">
                            <div class="col-xs-3">
                                <label for="Salario">Prestamos</label>
                                <input id="sueldo" class="form-control" name="sueldo" type="text" autofocus value="@Model.empleado.sueldo">
                            </div>
                            <div class="col-xs-3">
                                <label for="Salario">Salario</label>
                                <input id="sueldo" class="form-control" name="sueldo" type="text" autofocus value="@Model.empleado.sueldo">
                            </div>
                            <div class="col-xs-3">
                                <label for="retroactiv">Retroactivo</label>
                                <input id="retroactivo" class="form-control" name="retroactivo" type="text" autofocus value="0" />
                            </div>                            
                        </div>
                        <div class="form-group row">
                            <div class="col-xs-3">
                                <label for="sso">S.S.O</label>
                                <input name="sso" id="sso" class="form-control" type="text" autofocus value="@Model.empleado.SSO" readonly />
                            </div>
                            <div class="col-xs-3">
                                <label for="rpe">R.P.E</label>
                                <input id="rpe" name="rpe" type="text" autofocus class="form-control" value="@Model.empleado.RPE" readonly>
                            </div>
                            <div class="col-xs-3">
                                <label for="faov">F.A.O.V.</label>
                                <input id="rpe" name="rpe" type="text" autofocus class="form-control" value="@Model.empleado.FAOV" readonly>
                            </div>
                            <div class="col-xs-3">
                                <label for="inces">INCES</label>
                                <input required id="rpe" name="rpe" type="text" autofocus class="form-control" value="@Model.empleado.INCES" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-xs-3">
                                <label for="alimentacion">Bono Alimentacion</label>
                                <input required id="alimentacion" name="rpe" type="text" autofocus class="form-control" value="@Model.empleado.BonoAlimentacion" readonly>
                            </div>                            
                        </div>
                        <div class="col-lg-15">
                            <input type="submit" class="btn btn-success" value="Guardar">
                            <a href="/Pago/PagoNomina" class="btn btn-danger">Cancelar</a>
                        </div>
                    </fieldset>
                </div>                
            </form>
        </div>

        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>