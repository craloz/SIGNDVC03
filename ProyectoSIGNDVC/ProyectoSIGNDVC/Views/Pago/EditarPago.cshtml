@model ProyectoSIGNDVC.Models.ViewModel
@{
    ViewBag.Title = "EditarPago";
    Layout = "~/Views/Templates/_TemplateLogin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Editar Pago</h1>
        </div>

        <div class="col-lg-12">
            <form role="form" action="/Pago/EditarPagoByEmp" method="post">
                <div>
                    <fieldset>
                        <div class="row">
                            <div class="col-xs-5">
                                <h2 class="page-header">Datos Personales</h2>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-xs-4">

                                <label for="Salario">Salario</label>
                                <input required id="sueldo" class="form-control" name="sueldo" type="text" autofocus value="@Model.empleado.sueldo">
                            </div>
                            <div class="col-xs-4">
                                <label for="retroactiv">Retroactivo</label>
                                <input required id="retroactivo" class="form-control" name="retroactivo" type="text" autofocus value="" />
                            </div>

                            <div class="col-xs-4">
                                <label for="sso">S.S.O</label>
                                <input required name="sso" id="sso" class="form-control"  type="text" autofocus value="@Model.empleado.SSO" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-xs-3">
                                <label for="rpe">R.P.E</label>
                                <input required id="rpe" name="rpe" type="number" autofocus class="form-control" value="@Model.empleado.RPE">
                            </div>
                            <div class="col-xs-3">
                                <label for="faov">F.A.O.V.</label>
                                <input required id="rpe" name="rpe" type="number" autofocus class="form-control" value="@Model.empleado.FAOV">
                            </div>
                            <div class="col-xs-3">
                                <label for="inces">INCES</label>
                                <input required id="rpe" name="rpe" type="number" autofocus class="form-control" value="@Model.empleado.RPE">
                            </div>
                        </div>
                    </fieldset>
                </div>                
            </form>
        </div>

        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>